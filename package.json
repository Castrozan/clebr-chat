{
    "name": "chat-client",
    "version": "1.0.0",
    "description": "Frontend Chat Client with E2E Testing",
    "type": "module",
    "main": "chat.html",
    "scripts": {
        "test": "export PLAYWRIGHT_BROWSERS_PATH=/home/zanoni/.local/share/playwright-browsers && export PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=true && npx playwright test --project chromium --timeout 10000",
        "test:performance": "node tests/run-performance-test.js",
        "test:security": "node tests/run-security-test.js",
        "test:ux": "node tests/run-ux-test.js",
        "test:all": "node tests/run-all-tests.js",
        "start": "live-server --host=127.0.0.1 --port=5500 --open=chat.html",
        "dev": "live-server --host=127.0.0.1 --port=5500 --open=chat.html"
    },
    "devDependencies": {
        "@playwright/test": "^1.41.1",
        "live-server": "^1.2.2"
    },
    "keywords": [
        "chat",
        "client",
        "frontend",
        "playwright",
        "e2e"
    ],
    "author": "",
    "license": "ISC"
}